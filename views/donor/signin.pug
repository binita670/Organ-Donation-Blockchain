extends ../base

block content
        
    <form class="text-center border border-light p-5" action="/signedin" method="post" style="margin-left:30%;margin-right: 30%; margin-top: 10%; margin-bottom:50px;">

        <p class="h4 mb-4">Sign in</p>

        <!-- Email -->
        <input type="email" id="defaultLoginFormEmail" class="form-control mb-4" placeholder="E-mail" name="emailId">

        <!-- Password -->
        <input type="password" id="defaultLoginFormPassword" class="form-control mb-4" placeholder="Password" name="password">

        <div class="d-flex justify-content-around">
            
            <div>
                <!-- Forgot password -->
                <a href="">Forgot password?</a>
            </div>
        </div>

        <!-- Sign in button -->
        <button class="btn success-color-dark btn-info btn-block my-4 "  type="submit" style="margin-left:1px;">Sign in</button>
        
        
        <!-- Register -->
        <p>Not a member?
            <a href='/donor/register'>Register</a>
        </p>

    </form>