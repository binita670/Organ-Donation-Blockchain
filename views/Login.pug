  link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.8.2/css/all.css')
  // Bootstrap core CSS
  link(href='/css/bootstrapmin.css' rel='stylesheet')
  // Material Design Bootstrap
  link(href='/css/mdbmin.css' rel='stylesheet')
  // JQuery
  script(type='text/javascript' src='/js/jquerymin.js')
  // Bootstrap tooltips
  script(type='text/javascript' src='/js/poppermin.js')
